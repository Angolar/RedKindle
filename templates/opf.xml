<?xml version="1.0" encoding="utf-8"?>
<package xmlns="http://www.idpf.org/2007/opf" version="2.0" unique-identifier="BookId">
  <metadata>
  	<dc-metadata xmlns:dc="http://purl.org/dc/elements/1.1/">
	      <dc:title>DailyKindle {{date}}</dc:title>
	      <dc:language>zh-CN</dc:language>
	      <meta content="cover-image" name="cover"/>
	      <dc:creator>DailyKindle</dc:creator>
	      <meta name="cover" content="cover-image" />
	</dc-metadata>
	<x-metadata>
	      <output content-type="application/x-mobipocket-subscription-magazine" encoding="utf-8"/>
	</x-metadata>
  </metadata>

  <manifest>
  	<item id="ncx" media-type="application/x-dtbncx+xml" href="toc.ncx"></item>
	<item id="style" href="style.css" media-type="application/css" />
	<item id="toc" media-type="application/xhtml+xml" href="toc.html"/>
	{% for feed in feeds %}
	<item id="item{{feed.number}}" media-type="application/xhtml+xml" href="{{feed.number}}.html"/>
	{% endfor %}
	{% for name in img_name %}
	<item id="{{ name }}" href="{{ name }}" media-type="image/jpeg" />
	{% endfor %}
  </manifest>

  <spine toc="ncx">
   	 <itemref idref="toc" linear="no" />
 	 {% for feed in feeds %}
	 <itemref idref="item{{feed.number}}"/>
	 {% endfor %}
  </spine>

  <guide>
  	 <reference type="toc" title="Table of Contents" href="toc.html"></reference>
	 {# Make the TOC the first thing to read. #}
	 <reference type="text" title="Table of Contents" href="2.html"></reference>
  </guide>
</package>
